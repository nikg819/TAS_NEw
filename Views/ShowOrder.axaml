<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels1="clr-namespace:TAS_Test.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TAS_Test.Views.ShowOrder"
        x:DataType="viewModels1:ShowOrderViewModel"
        >
    
    <Grid>
         <!-- Hauptbereich -->
        
        <Border Background="#F5F5F5">
            <StackPanel Margin="20">
                <StackPanel Name="Kopfzeile">
                    <TextBlock Text="{Binding Header}" Name="Header"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,20"/>
                    
                </StackPanel>
                <Border Background="White"
                        Margin="0,20,0,0"
                        Padding="15"
                        Name="BorderShowOrder">
                    <StackPanel Name="ShowOrderPanel">
                        <Grid ColumnDefinitions="Auto,20, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto">
                                
                            <TextBlock Text="Auftragsnummer:" Foreground="Black" Grid.Column="0" Grid.Row = "0" VerticalAlignment="Center" TextAlignment="Right" />
                            <TextBlock Text="{Binding ShowOrderOrderId}" Margin="5" Width="180" HorizontalAlignment="Left" Grid.Column="2" Grid.Row = "0" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray"/>
                            <TextBlock Text="Kunde:" Foreground="Black" Grid.Column="0" Grid.Row = "1" VerticalAlignment="Center" TextAlignment="Right"/>
                            <TextBlock Text="{Binding ShowOrderKundenNamen}" Margin="5" Width="180" HorizontalAlignment="Left" Grid.Column="2" Grid.Row = "1" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray"/>
                            <TextBlock Text="Fahrzeug:" Foreground="Black" Grid.Column="0" Grid.Row = "2" VerticalAlignment="Center" TextAlignment="Right"/>
                            <TextBlock Text="{Binding ShowOrderFahrzeug}" Margin="5" Width="180" HorizontalAlignment="Left" Grid.Column="2" Grid.Row = "2" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" />
                            <TextBlock Text="Mailadresse:" Foreground="Black" Grid.Column="0" Grid.Row = "3" VerticalAlignment="Center" TextAlignment="Right"/>
                            <TextBlock Text="{Binding ShowOrderMail}" Margin="5" Width="180" HorizontalAlignment="Left" Grid.Column="2" Grid.Row = "3" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" />
                            <TextBlock Text="Telefonnummer:" Foreground="Black" Grid.Column="0" Grid.Row = "4" VerticalAlignment="Center" TextAlignment="Right"/>
                            <TextBlock Text="{Binding ShowOrderPhone}" Margin="5" Width="180" HorizontalAlignment="Left" Grid.Column="2" Grid.Row = "4" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" />
                            <TextBlock Text="Kundenbemerkung:" Foreground="Black" Grid.Column="0" Grid.Row = "5" VerticalAlignment="Center" TextAlignment="Right"/>
                            <TextBlock Text="{Binding ShowOrderKundenbemerkungen}" Margin="5" Width="400" HorizontalAlignment="Left" Grid.Column="2" Grid.Row = "5" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" TextWrapping="Wrap"/>
                            <TextBlock Text="Maximale Kosten:" Foreground="Black" Grid.Column="0" Grid.Row = "6" VerticalAlignment="Center" TextAlignment="Right"/>
                            <TextBlock Text="{Binding ShowOrderMaximaleKosten}" Margin="5" Width="180" HorizontalAlignment="Left" Grid.Column="2" Grid.Row = "6" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray"/>
                            <TextBlock Text="Reparaturen:" Foreground="Black" Grid.Column="0" Grid.Row = "7" VerticalAlignment="Center" TextAlignment="Right"/>
                            <TextBlock Text="{Binding ShowOrderReparaturen}" Margin="5" Width="400" HorizontalAlignment="Left" Grid.Column="2" Grid.Row = "7" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" TextWrapping="Wrap"/>
                            <TextBlock Grid.Row="8" Grid.Column="0"/>
                            <TextBlock Text="Auftrag erstellt am:" Foreground="Black" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" TextAlignment="Right"/>
                            <TextBlock Text="{Binding ShowOrderTimestamp}" Grid.Row="9" Grid.Column="2" Margin="5" Width="400" HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" TextWrapping="Wrap"/>
                            <TextBlock Text="Bis wann:" Foreground="Black" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" TextAlignment="Right"/>
                            <TextBlock Text="{Binding ShowOrderAuftragsdatum}" Grid.Row="10" Grid.Column="2" Margin="5" Width="400" HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" TextWrapping="Wrap"/>

                        </Grid>
                    </StackPanel>
                </Border>
                
                <Button Content="ZurÃ¼ck" Grid.Row="2"
                        Name="NewCustomer"
                        Command="{Binding GoBack}"
                        Background="LightGray"
                        Foreground="Black"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Padding="10,8"
                        Margin="0,15"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
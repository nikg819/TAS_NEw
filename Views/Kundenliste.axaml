<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels1="clr-namespace:TAS_Test.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TAS_Test.Views.Kundenliste"
        x:DataType="viewModels1:KundenlisteViewModel"
        >
    
    
        <!-- Hauptbereich -->
        
        <Border Background="#F5F5F5">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                <StackPanel Name="Kopfzeile" Grid.Row="0">
                    <TextBlock Text="Kundenliste" Name="Header"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,20"/>
                    
                    <TextBlock Text="{Binding Subheader}" Name="Subheader"
                               FontSize="12" 
                               Foreground="Black"
                               Margin="0,0,0,20"/>
                    <TextBox Name="Suche"
                             Text="{Binding SearchText, Mode=TwoWay}"
                             Margin="5" Width="200" 
                             HorizontalAlignment="Left"  
                             VerticalAlignment="Center" 
                             Background="white" 
                             Foreground="DimGray" 
                             BorderBrush="LightGray" 
                             Watermark="Suche...">
                    </TextBox>
                </StackPanel>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding AllCustomers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>      <!-- Das ItemsPanel stackt die einzelnen Einträge von AllCustomers übereinander -->
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate> <!-- Zeigt wie jedes einzelne Element auszusehen hat -->
                            <DataTemplate>
                                <Border BorderThickness="0"
                                        BorderBrush="Gray"
                                        Margin="5"
                                        Padding="10"
                                        Background="White">
                                    <Grid ColumnDefinitions="50,*,*,*,*,Auto,Auto,Auto">
                                        <TextBlock Text="{Binding lexwareId}" Grid.Column="0" Foreground="Gray" TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding name}" Grid.Column="1" Foreground="Gray" TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding mail}" Grid.Column="2" Foreground="Gray" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding phone}" Grid.Column="3" Foreground="Gray" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding notes}" Grid.Column="4" Foreground="Gray" TextWrapping="Wrap"/>
                                        
                                        <Button Content="✏️" 
                                            Grid.Column="5"
                                            Background="Transparent"
                                            Foreground="Black"
                                            BorderBrush="LightGray"
                                            BorderThickness="1"
                                            Padding="10,5"
                                            Margin="5,0"
                                            CornerRadius="3"
                                            FontSize="12"
                                            VerticalAlignment="Center"
                                            Command="{Binding $parent[ItemsControl].((viewModels1:KundenlisteViewModel)DataContext).EditCommand}"
                                            CommandParameter="{Binding}" 
                                            ToolTip.Tip="Kunde bearbeiten"/>
                                        
                                        <Button Content="🗑" 
                                                Grid.Column="6"
                                                Background="Transparent"
                                                Foreground="Black"
                                                BorderBrush="LightGray"
                                                BorderThickness="1"
                                                Padding="10,5"
                                                Margin="5,0"
                                                CornerRadius="3"
                                                FontSize="12"
                                                VerticalAlignment="Center"
                                                Command="{Binding $parent[ItemsControl].((viewModels1:KundenlisteViewModel)DataContext).DeleteCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="Kunde löschen"/>
                                        
                                        <Button Content="+" 
                                                Grid.Column="7"
                                                Background="Transparent"
                                                Foreground="Black"
                                                BorderBrush="LightGray"
                                                BorderThickness="1"
                                                Padding="10,5"
                                                Margin="5,0"
                                                CornerRadius="3"
                                                FontSize="12"
                                                VerticalAlignment="Center"
                                                Command="{Binding $parent[ItemsControl].((viewModels1:KundenlisteViewModel)DataContext).NewOrderCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="Neuen Auftrag erstellen"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                
                <Button Content="Neuer Kunde" Grid.Row="2"
                        Name="NewCustomer"
                        Command="{Binding NewCustomer}"
                        Background="LightGray"
                        Foreground="Black"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Padding="10,8"
                        Margin="0,15"/>
                </Grid>
        </Border>
</UserControl>
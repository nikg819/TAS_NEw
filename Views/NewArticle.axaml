<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels1="clr-namespace:TAS_Test.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TAS_Test.Views.NewArticle"
        x:DataType="viewModels1:NewArticleViewModel"
        >
    
    <Grid>
        <!-- Hauptbereich -->
        
        <Border Background="#F5F5F5">
            <StackPanel Margin="20">
                <StackPanel Name="Kopfzeile">
                    <TextBlock Text="{Binding Header}" Name="Header"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,20"/>
                    
                    <TextBlock Text="{Binding Subheader}" Name="Subheader"
                                FontSize="12" 
                                Foreground="Black"
                                Margin="0,0,0,20"/>
                    
                </StackPanel>
                
                <Border Background="White"
                        Margin="0,20,0,0"
                        Padding="15"
                        Name="BorderNewOrder">
                    
                    <StackPanel Name="InputOrder">
                        <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto">
                                
                                <TextBlock Text="Artikelnummer*:" Foreground="Black" Grid.Column="0" Grid.Row = "0" VerticalAlignment="Center"/>
                                <TextBox Name="InputAuftragsnamen" Text="{Binding InputArticleNumber, Mode=TwoWay}" Margin="5" Width="300" HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "0" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap" AcceptsReturn="True"/>
                                <TextBlock Text="Bezeichnung:" Foreground="Black" Grid.Column="0" Grid.Row = "1" VerticalAlignment="Center"/>
                                <TextBox Name="InputAuftragsdatum" Text="{Binding InputArticleName, Mode=TwoWay}" Margin="5" Width="300" HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "1" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap" AcceptsReturn="True"/>
                                <TextBlock Text="Beschreibung:" Foreground="Black" Grid.Column="0" Grid.Row = "2" VerticalAlignment="Center"/>
                                <TextBox Name="InputReparaturen" Text="{Binding InputArticleDescription, Mode=TwoWay}" Margin="5" Width="300" Height="100" HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "2" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap" AcceptsReturn="True"/>
                                <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal">
                                    <TextBox Text="{Binding InputArticlePrice, Mode=TwoWay}" Margin="5" Width="60"  HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap" AcceptsReturn="True"/>
                                    <TextBlock Text="â‚¬" Foreground="Black" VerticalAlignment="Center"/>
                                </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                <Button Content="Speichern"
                        Command="{Binding ButtonAddNewArticle}"
                        Background="LightGray"
                        Foreground="Black"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Padding="10,8"
                        Margin="0,15"/>
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
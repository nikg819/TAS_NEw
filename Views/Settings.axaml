<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels1="clr-namespace:TAS_Test.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TAS_Test.Views.Settings"
        x:DataType="viewModels1:SettingsViewModel"
        >
    
    <Grid>
         <!-- Hauptbereich -->
        
        <Border Background="#F5F5F5">
            <StackPanel Margin="20">
                <StackPanel>
                    <TextBlock Text="Einstellungen" Name="Header"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="{Binding Subheader}" Name="Subheader"
                               FontSize="12" 
                               Foreground="Black"
                               Margin="0,0,0,20"/>
                    
                </StackPanel>
                <Border Background="White"
                        Margin="0,20,0,0"
                        Padding="15">
                    <StackPanel>
                        <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto">
                            
                                <TextBlock Text="Pfadeinstellungen" Grid.Column="0" Grid.Row="0" Foreground="Black" FontWeight="Bold" Margin="0,0,0,17"/>
                            
                                <TextBlock Text="Prince/PDF Pfad:" Foreground="Black" Grid.Column="0" Grid.Row = "1" VerticalAlignment="Center"/>
                                <TextBox  Text="{Binding SettingsPrince, Mode=TwoWay}" Margin="5" Width="500" HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "1" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap"/>
                                <TextBlock Text="PDF Speicher Pfad:" Foreground="Black" Grid.Column="0" Grid.Row = "2" VerticalAlignment="Center"/>
                                <TextBox  Text="{Binding SettingsOutputPath, Mode=TwoWay}" Margin="5" Width="500" HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "2" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap"/>
                                <TextBlock Text="Datenbankpfad:" Foreground="Black" Grid.Column="0" Grid.Row = "3" VerticalAlignment="Center"/>
                                <TextBox  Text="{Binding SettingsDbPath, Mode=TwoWay}" Margin="5" Width="500" HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "3" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap"/>
                        </Grid>
                    </StackPanel>
                </Border>
                <Button Content="Speichern"
                        Name="AddNewCustomer"
                        Command="{Binding ButtonSafeSettings}"
                        Background="LightGray"
                        Foreground="Black"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Padding="10,8"
                        Margin="0,15"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
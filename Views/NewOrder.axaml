<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels1="clr-namespace:TAS_Test.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TAS_Test.Views.NewOrder"
        x:DataType="viewModels1:NewOrderViewModel"
        >
    
    <Grid>
        <!-- Hauptbereich -->
        
        <Border Background="#F5F5F5">
            <StackPanel Margin="20">
                <StackPanel Name="Kopfzeile">
                    <TextBlock Text="{Binding Header}" Name="Header"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,20"/>
                    
                    <TextBlock Text="{Binding Subheader}" Name="Subheader"
                                FontSize="12" 
                                Foreground="Black"
                                Margin="0,0,0,20"/>
                    
                </StackPanel>
                
                <Border Background="White"
                        Margin="0,20,0,0"
                        Padding="15"
                        Name="BorderNewOrder">
                    
                    <StackPanel Name="InputOrder">
                        <Grid ColumnDefinitions="Auto, Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto">
                                
                                <TextBlock Text="Auftragsnamen*:" Foreground="Black" Grid.Column="0" Grid.Row = "0" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding InputAuftragsnamen, Mode=TwoWay}" Margin="5" Width="300" HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "0" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap" AcceptsReturn="True"/>
                                <TextBlock Text="Bis wann:" Foreground="Black" Grid.Column="0" Grid.Row = "1" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding InputAuftragsdatum, Mode=TwoWay}" Margin="5" Width="300" HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "1" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap" AcceptsReturn="True"/>
                                <TextBlock Text="Kennzeichen*:" Foreground="Black" Grid.Column="0" Grid.Row = "2" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding InputKennzeichen, Mode=TwoWay}" Margin="5" Width="300" HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "2" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap" AcceptsReturn="True"/>
                                <TextBlock Text="Fahrzeugmodell:" Foreground="Black" Grid.Column="0" Grid.Row = "3" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding InputFahrzeugModell, Mode=TwoWay}" Margin="5" Width="300"  HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "3" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap" AcceptsReturn="True"/>
                                <TextBlock Text="Fahrzeugfarbe:" Foreground="Black" Grid.Column="0" Grid.Row = "4" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding InputFahrzeugFarbe, Mode=TwoWay}" Margin="5" Width="300"  HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "4" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap" AcceptsReturn="True"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Artikel:" Foreground="Black" Background="White" HorizontalAlignment="Left"/>
                                
                                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Grid.Row="5" Grid.Column="1" Margin="5">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" Foreground="Black" MaxHeight="200">
                                        <ItemsControl ItemsSource="{Binding ArticleSelection}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel/>      <!-- Das ItemsPanel stackt die einzelnen Einträge von AllCustomers übereinander -->
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>

                                            <ItemsControl.ItemTemplate> <!-- Zeigt wie jedes einzelne Element auszusehen hat -->
                                                <DataTemplate>
                                                    <Border BorderThickness="0"
                                                            BorderBrush="Gray"
                                                            Margin="5"
                                                            Padding="3"
                                                            Background="Transparent">
                                                        <Grid ColumnDefinitions="Auto,Auto, Auto">
                                                            <CheckBox Foreground="Black" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding IsChecked}" Content="{Binding ArticleName}" >
                                                                <CheckBox.Styles>
                                                                    <Style Selector="CheckBox">
                                                                        <Setter Property="Template">
                                                                            <ControlTemplate>
                                                                                <StackPanel Orientation="Horizontal" Spacing="5">
                                                                                    <!-- Box -->
                                                                                    <Border Width="15" Height="15" CornerRadius="3"
                                                                                        BorderBrush="DarkGray" BorderThickness="1"
                                                                                        Background="Transparent">
                                                                                        <!-- Häkchen -->
                                                                                        <Border Width="12" Height="12"
                                                                                            Background="Gray"
                                                                                            CornerRadius="3"
                                                                                            HorizontalAlignment="Center"
                                                                                            VerticalAlignment="Center"
                                                                                            IsVisible="{TemplateBinding IsChecked}"/>
                                                                                    </Border>
                                                                                    <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                                                                                </StackPanel>
                                                                            </ControlTemplate>
                                                                        </Setter>
                                                                    </Style>
                                                                </CheckBox.Styles>
                                                            </CheckBox>
                                                            <TextBlock Text="{Binding ArticleDescription}" Grid.Column="2" Foreground="Gray" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                                <TextBlock Text="Maximale Kosten:" Foreground="Black" Grid.Column="0" Grid.Row = "6" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Grid.Row="6" Orientation="Horizontal">
                                    <TextBox Text="{Binding InputMaximaleKosten, Mode=TwoWay}" Margin="5" Width="60"  HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap" AcceptsReturn="True"/>
                                    <TextBlock Text="€" Foreground="Black" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Bemerkungen:" Foreground="Black" Grid.Column="0" Grid.Row = "7" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding InputOrderNotes, Mode=TwoWay}" Margin="5" Height="150" Width="300"  HorizontalAlignment="Left" Grid.Column="1" Grid.Row = "7" VerticalAlignment="Center" Background="Transparent" Foreground="DimGray" BorderBrush="Gray" TextWrapping="Wrap" AcceptsReturn="True"/>

                        </Grid>
                    </StackPanel>
                </Border>
                <Button Content="Speichern"
                        Name="AddNewOrder"
                        Command="{Binding ButtonAddNewOrder}"
                        Background="LightGray"
                        Foreground="Black"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Padding="10,8"
                        Margin="0,15"/>
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>